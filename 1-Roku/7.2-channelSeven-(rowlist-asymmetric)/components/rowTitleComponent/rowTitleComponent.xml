<?xml version="1.0" encoding="utf-8" ?>
<component name="rowTitleComponent" extends="Group">
    <script type="text/brightscript" uri="rowTitleComponent.brs"/>
    <interface>
        <field id="content" type="node" onChange="onContentChange"/>
        <field id="rowCounterVertAlign" type="string" value="top"/>
    </interface>
    <children>
        <layoutGroup
            id="layoutGroup"
            translation="[-100, 0]"
            layoutDirection="vert"
            itemSpacings="[10]">
            <label
                    id="label"
                    text="newRowTitle"
                    font="font:SmallestBoldSystemFont"
                    color="0xF1F1F1F1" />
            <poster
                id="poster"
                width="200"
                height="200"
                uri="pkg:/images/channel-poster_fhd.png"/>
        </layoutGroup>
    </children>
</component>
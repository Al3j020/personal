<?xml version="1.0" encoding="utf-8" ?>
<component name="CustomPoster" extends="Group"> 
    <script type="text/brightscript" uri="CustomPoster.brs"/>
    <interface>
        <field id="uri" type="uri" alias="poster.uri"/>
        <field id="text" type="string" alias="label.text"/>
    </interface>
    <children> 
        <rectangle
            id="rectangle"
            width="210"
            height="210"
            color="0xFFFFFF"
            visible="false"/>
        <layoutGroup
            id="layoutGroup"
            layoutDirection="vert"
            translation="[5, 5]"
            itemSpacings="[20]">
            <poster
                id="poster"
                width="200"
                height="200"/>
            <label
                id="label"/>
        </layoutGroup>
    </children>
</component>